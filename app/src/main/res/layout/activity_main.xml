<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zaccianflone.pantrypro.MainActivity"
    android:background="#78C3FB">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:id="@+id/add_item"
        android:layout_above="@+id/view_pantry"
        android:layout_alignLeft="@+id/make_recipe"
        android:layout_alignStart="@+id/make_recipe"
        android:background="#ffffcc"
        android:textColor="@android:color/black"
        android:layout_marginBottom="50dp"
        android:onClick="goToAddItem"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Pantry"
        android:id="@+id/view_pantry"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/add_item"
        android:background="#ffffcc"
        android:textColor="@android:color/black"
        android:layout_alignStart="@+id/add_item"
        android:onClick="goToViewPantry"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Recipe"
        android:id="@+id/make_recipe"
        android:layout_below="@+id/view_pantry"
        android:layout_centerHorizontal="true"
        android:background="#ffffcc"
        android:textColor="@android:color/black"
        android:layout_marginTop="50dp"
        android:onClick="goToRecipeName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pantry Pro"
        android:textSize="32sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Recipes"
        android:id="@+id/edit_pantry"
        android:layout_below="@+id/make_recipe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#ffffcc"
        android:onClick="goToMyRecipes"/>
</RelativeLayout>
