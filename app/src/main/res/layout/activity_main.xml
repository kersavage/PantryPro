<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zaccianflone.pantrypro.MainActivity">
    <!--android:background="#78C3FB">-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:id="@+id/add_item"
        android:onClick="goToAddItem"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="53dp"
        android:textSize="18sp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/make_recipe"
        android:layout_alignStart="@+id/make_recipe"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Pantry"
        android:id="@+id/view_pantry"
        android:onClick="goToViewPantry"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:textSize="18dp"
        android:layout_below="@+id/add_item"
        android:layout_alignLeft="@+id/add_item"
        android:layout_alignStart="@+id/add_item"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Recipe"
        android:id="@+id/make_recipe"
        android:layout_marginTop="39dp"
        android:onClick="goToRecipeName"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="37dp"
        android:paddingRight="37dp"
        android:textSize="18dp"
        android:layout_below="@+id/view_pantry"
        android:layout_alignRight="@+id/edit_pantry"
        android:layout_alignEnd="@+id/edit_pantry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pantry Pro"
        android:textSize="32sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Recipes"
        android:id="@+id/edit_pantry"
        android:onClick="goToMyRecipes"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="43dp"
        android:paddingRight="43dp"
        android:textSize="18dp"
        android:layout_below="@+id/make_recipe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

</RelativeLayout>



